/* pages/todoList/todoList.wxss */
.wen-box{
  width: 100%;
}
.title-box{
  display: flex;
  flex-flow: row;
  margin: 15rpx;
  justify-content: flex-end;
  align-items: flex-end;

}
.task-list{
  box-shadow: 0px 3px 32px 0px rgba(0, 0, 0, 0.19);
  background-color: #fff;
  height: 500rpx;
  margin: 15rpx;
  border-radius: 10rpx;
}
.task-item{
  border-bottom: 1rpx solid #eee;
  margin: 0 25rpx;
  padding: 25rpx 0;
}
.iconstyle{
  margin-right: 16px;
  vertical-align: middle;
  width:20px;
  height: 20px;
  background-color: #2F89FF;
}